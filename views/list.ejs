    <script>
      $(document).ready(function () {
        
      });

      function mtdCancelarPedido(id){
        swal({
          text: '¬øDesea cancelar este pedido?',
          buttons:{
            cancel:"NO",
            defeat:"SI",
          },
        })
        .then(name => {
          if (!name) throw null;
        
          return fetch(`/lista/cancel/`+id);
        })
        .then(results => {
          return results.json();
        })
        .then(json => {
          
          swal({
            title: "",
            text: 'Cancelado correctamente',
            icon: 'success',
          });
          setTimeout(function () {
            window.location.reload();
          }, 1000);
        })
        .catch(err => {
          if (err) {
            swal("Oh no!", "Hubo un error al procesar la petici√≥n", "error");
          } else {
            swal.stopLoading();
            swal.close();
          }
        });
      }

      function mtdViewMaps(lat, lon){
        let nLat = parseFloat(lat);
        let nLon = parseFloat(lon);
        // console.log(nLat,nLon);
        initMap(nLat,nLon);
        $('#modalMaps').modal('show');
        setTimeout(function () {
          $('#map').removeAttr('style');
          }, 1000);
      }

      function initMap(lat,lon){
        var myLatLng = {lat: lat, lng: lon}; // Define las coordenadas de la ubicaci√≥n deseada

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 17, // Define el nivel de zoom
          center: myLatLng // Centra el mapa en la ubicaci√≥n deseada
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Ubicaci√≥n de entrega' // Define el texto del tooltip del marcador
        });
      }

      function mtdProcess(id,state){
        let accion = state == 2?'aceptar':(state == 3?'procesar': (state==4?'enviar':'entregar') );
        let res = state == 2?'Aceptado':(state == 3?'Procesado': (state==4?'Enviado':'Entregado'));
        swal({
          text: '¬øDesea '+accion+' este pedido?',
          buttons:{
            cancel:"NO",
            defeat:"SI",
          },
        })
        .then(name => {
          if (!name) throw null;
        
          return fetch(`/lista/process/`+id+`/`+state);
        })
        .then(results => {
          return results.json();
        })
        .then(json => {
          swal({
            title: "",
            text: res+ ' correctamente',
            icon: 'success',
          });
          setTimeout(function () {
            window.location.reload();
          }, 1000);
        })
        .catch(err => {
          if (err) {
            swal("Oh no!", "Hubo un error al procesar la petici√≥n", "error");
          } else {
            swal.stopLoading();
            swal.close();
          }
        });
      }


      function mtdViewDet(id) {
        $.ajax({
          url: '/lista/detail/'+id,
          type: 'GET',
          success : function(response){
            let html = "";
            response.lista.forEach(element => {
              html += "<tr>";
              html += "<td>"+element.productpresentation.product.name+"</td>";
              html += "<td>"+element.productpresentation.presentation.name+"</td>";
              html += "<td>"+element.quantity+"</td>";
              html += "<td>"+element.price+"</td>";
              html += "<td>"+parseFloat(element.quantity*element.price).toFixed(2)+"</td>";
              html += "</tr>";
            });
            $('#modalDet').modal('show');
            $('#bodyDetail').html(html);
          },
          error: function(error){
            console.log(error);
          }
        });
      }
    </script>
